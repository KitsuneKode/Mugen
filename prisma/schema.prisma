generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int       @id @unique @default(autoincrement())
  name     String
  password String
  email    String    @unique
  Contents Content[]
  Tags     Tag[]
  Brains   Brain[]
}

model Content {
  id     Int         @id @unique @default(autoincrement())
  type   ContentType
  title  String
  link   String
  Tags   Tag[]
  userId Int
  user   User        @relation(fields: [userId], references: [id])
  Brains Brain[]
}

model Tag {
  id       Int       @id @unique @default(autoincrement())
  tags     String    @unique
  Contents Content[]
  Users    User[]
  Brains   Brain[]
}

model Brain {
  id       Int       @id @unique @default(autoincrement())
  userId   Int
  name     String
  share    Boolean   @default(false)
  user     User      @relation(fields: [userId], references: [id])
  Contents Content[]
  linkId   Int?      @unique
  Link     Link?
  Tags     Tag[]
}

model Link {
  id      Int    @id @unique @default(autoincrement())
  hash    String
  brainId Int    @unique
  Brain   Brain  @relation(fields: [brainId], references: [id])
}

enum ContentType {
  image
  video
  article
  audio
  twitter
  reddit
  youtube
  other
}
